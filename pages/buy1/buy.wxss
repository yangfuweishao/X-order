  background-color:rgba(0,0,0,0.5);
  overflow: hidden;  
}
.show-cart{
  width: 100%;
  max-height: 300rpx;
  position: fixed;
  bottom: 120rpx;
  /* overflow:hidden; */
  /* background-color:rgba(0,0,0,0.5); */
  background-color: #fff;
}

.show-list{
  position: relative;
