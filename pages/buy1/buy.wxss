}

.show-list-title{
  font-size: 35rpx;
  font:bolder;
  text-align: center;
  position: relative;
  bottom: 0rpx;
  flex:  50%;
  margin: 1% 2% 1% 2%;
}

.show-list-controller{
  position: relative;
  display: flex;
  font-size: 35rpx;
